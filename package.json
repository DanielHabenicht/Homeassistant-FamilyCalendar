{
  "name": "homeassistant-familycalendar-for-homeassistant",
  "version": "1.0.0",
  "description": "A Home Assistant custom calendar card with day/week/month views and person selectors",
  "keywords": [
    "home-assistant",
    "lovelace",
    "custom-card",
    "calendar"
  ],
  "license": "MIT",
  "main": "dist/calendar-card.js",
  "scripts": {
    "build": "rollup -c rollup.config.mjs",
    "watch": "rollup -c rollup.config.mjs --watch",
    "dev": "rollup -c rollup.config.mjs --watch",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "type-check": "tsc --noEmit",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:report": "playwright show-report"
  },
  "dependencies": {
    "@fullcalendar/core": "^6.1.15",
    "@fullcalendar/daygrid": "^6.1.15",
    "@fullcalendar/interaction": "^6.1.15",
    "@fullcalendar/timegrid": "^6.1.15",
    "lit": "^3.2.1"
  },
  "devDependencies": {
    "@playwright/test": "^1.58.2",
    "@rollup/plugin-commonjs": "^28.0.2",
    "@rollup/plugin-node-resolve": "^16.0.0",
    "@rollup/plugin-replace": "^6.0.2",
    "@rollup/plugin-typescript": "^12.1.2",
    "prettier": "^3.4.2",
    "rollup": "^4.30.1",
    "rollup-plugin-postcss": "^4.0.2",
    "sass": "^1.85.1",
    "tslib": "^2.8.1",
    "typescript": "^5.7.3"
  }
}